{
  "compilerOptions": {
    "resolveJsonModule": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "/opt/client": [
        "src/layers/prisma/client"
      ]
    }
  },
  "exclude": ["cdk.out"],
  "include": [
    "./src/**/*",
  ]
}